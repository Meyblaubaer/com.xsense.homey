{
  "name": {
    "en": "Smoke Detector",
    "de": "Rauchmelder"
  },
  "class": "sensor",
  "images": {
    "large": "drivers/smoke-detector/assets/images/large.png",
    "small": "drivers/smoke-detector/assets/images/small.png"
  },
  "capabilities": [
    "alarm_smoke",
    "measure_smoke_status",
    "alarm_battery",
    "measure_battery",
    "measure_temperature",
    "measure_humidity",
    "alarm_co",
    "measure_co",
    "measure_last_seen",
    "measure_signal_strength"
  ],
  "energy": {
    "batteries": [
      "CR123A"
    ]
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "cloud"
  ],
  "pair": [
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "title": {
          "en": "Login to XSense",
          "de": "Bei XSense anmelden"
        },
        "usernameLabel": {
          "en": "Email",
          "de": "E-Mail"
        },
        "usernamePlaceholder": {
          "en": "email@example.com",
          "de": "email@beispiel.de"
        },
        "passwordLabel": {
          "en": "Password",
          "de": "Passwort"
        },
        "passwordPlaceholder": {
          "en": "Password",
          "de": "Passwort"
        }
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "prev": "login_credentials",
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices",
      "navigation": {
        "prev": "list_devices"
      }
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Device Information",
        "de": "Geräteinformationen"
      },
      "children": [
        {
          "id": "device_id",
          "type": "label",
          "label": {
            "en": "Device ID",
            "de": "Geräte-ID"
          },
          "value": ""
        },
        {
          "id": "software_version",
          "type": "label",
          "label": {
            "en": "Software Version",
            "de": "Softwareversion"
          },
          "value": ""
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Configuration",
        "de": "Konfiguration"
      },
      "children": [
        {
          "id": "alarm_volume",
          "type": "number",
          "label": {
            "en": "Alarm Volume",
            "de": "Alarmlautstärke"
          },
          "hint": {
            "en": "Volume level (1-100)",
            "de": "Lautstärkepegel (1-100)"
          },
          "min": 0,
          "max": 100,
          "value": 75
        },
        {
          "id": "voice_volume",
          "type": "number",
          "label": {
            "en": "Voice Volume",
            "de": "Sprachlautstärke"
          },
          "min": 0,
          "max": 100,
          "value": 75
        },
        {
          "id": "alarm_tone",
          "type": "dropdown",
          "label": {
            "en": "Alarm Tone",
            "de": "Alarmton"
          },
          "values": [
            {
              "id": "1",
              "label": "Tone 1"
            },
            {
              "id": "2",
              "label": "Tone 2"
            },
            {
              "id": "3",
              "label": "Tone 3"
            }
          ],
          "value": "1"
        },
        {
          "id": "led_brightness",
          "type": "number",
          "label": {
            "en": "LED Brightness",
            "de": "LED Helligkeit"
          },
          "min": 0,
          "max": 10,
          "value": 8
        },
        {
          "id": "is_fire_drill",
          "type": "checkbox",
          "label": {
            "en": "Fire Drill Mode",
            "de": "Feueralarm-Übungsmodus"
          },
          "value": false
        }
      ]
    }
  ]
}